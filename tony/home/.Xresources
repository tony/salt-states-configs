!! --- XLock ---
XLock.clock.count: 1
XLock.clock.size: 0
XLock.description: False
Xlock.echokeys: True
XLock.echokey: *
XLock.erasemode: no_fade

!! --- Xterm ---
xterm*boldColors: false
xterm*borderWidth: 0 
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
xterm*cursorBlind: true
xterm*cutNewLine: false
xterm*dynamicColors: true
xterm*faceName: monospace
xterm*faceSize: 10 
xterm*internalBorder: 4
xterm*pointerMode: 2
xterm*renderFont: true
xterm*selectToClipboard: true
xterm*termName: xterm-256color
xterm*toolBar: false

!! --- URxvt ---
#URxvt*font: xft:monospace:size=9
URxvt.font:xft:Inconsolata-12,xft:Monaco-9:antialias=False,xft:Terminus-10,xft:DejaVu Sans Mono,xft:WenQuanYi Micro Hei:pixelsize=12:antialias=True,xft:WenQuanYi Zen Hei:pixelsize=12:antialias=False,xft:Code2000:pixelsize=12:antialias=False
URxvt.boldFont:xft:Inconsolata-12,xft:Monaco-9:antialias=False,xft:Terminus-10,xft:DejaVu Sans Mono,xft:WenQuanYi Micro Hei:pixelsize=12:antialias=True,xft:WenQuanYi Zen Hei:pixelsize=12:antialias=False,xft:Code2000:pixelsize=12:antialias=False
URxvt*intensityStyles: false
URxvt*internalBorder: 1
URxvt.keysym.C-plus: command:\033]710;xft:monospace:size=9\007\033]711;xft:monospace:size=9\007
URxvt.keysym.C-minus: command:\033]710;xft:monospace:size=8\007\033]711;xft:monospace:size=8\007
URxvt*letterSpace: -1
URxvt*transparent: true
URxvt*.shading:  25

URxvt.inputMethod: ibus
URxvt.preeditType: OnTheSpot,None

URxvt*scrollBar_right: false
URxvt*scrollBar: false

URxvt.perl-ext-common: default,matcher,tabbed


!! --- Fonts ---
!! https://wiki.archlinux.org/index.php/Font_Configuration
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!! --- Cursor ---
Xcursor.theme: Vanilla-DMZ-AA 
Xcursor.size: 48


